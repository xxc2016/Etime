<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPostActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/setPostBar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/set_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="这里填入标题" />

        <EditText
            android:id="@+id/set_post_editPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:ems="10"
            android:gravity="start"
            android:hint="这里填入内容"
            android:inputType="textMultiLine"
            android:singleLine="false"
            tools:layout_editor_absoluteY="102dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/set_post_upPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Update"
                android:scaleType="fitStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp">

            <ImageButton
                android:id="@+id/set_post_setPic"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_menu_setting" />

        </LinearLayout>

        <Button
            android:id="@+id/set_post_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="4"
            android:background="@drawable/button_shape"
            android:text="发表帖子"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>